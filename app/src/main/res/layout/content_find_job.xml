<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vitaliy_petuhov.quickjob.activity.FindJobActivity"
    tools:showIn="@layout/activity_find_job"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvjName"
            android:textColor="#000000"
            android:text=" Поиск по названию работы:"
            android:textSize="7pt"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_job_jobname"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:hint="Введите работу и ключевые слова"
            android:theme="@android:style/Theme"
            android:layout_marginTop="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvjtype"
            android:textColor="#000000"
            android:text=" Поиск по типу работы:"
            android:textSize="7pt"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_job_type"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvjCity"
            android:textColor="#000000"
            android:text=" Поиск по городу:"
            android:textSize="7pt"
            android:textStyle="bold"
            android:layout_marginTop="-5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/find_job_city"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:hint="Введите город или ключевые слова"
            android:theme="@android:style/Theme"
            android:layout_marginTop="2dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Найти работу"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/find_job_butt"
            android:layout_below="@+id/find_job_jobname"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/search_butt"
            android:layout_marginTop="10dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="История поиска"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/history_search"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_butt"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новые объявления (0)"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/job_search_today"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_butt"/>

    </LinearLayout>


</LinearLayout>
