<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vitaliy_petuhov.quickjob.activity.NewPassword"
    tools:showIn="@layout/activity_new_password"
    android:background="#FE7575">


<ImageView
    android:src="@drawable/new_pass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idLogoNewPass"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<EditText
    android:hint="Введите имя пользователя"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/NameNewPass"
    android:layout_marginTop="80dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignLeft="@+id/EmailNewPass"
    android:layout_alignStart="@+id/EmailNewPass"
    android:layout_marginLeft="0dp"

    android:inputType="textPersonName"
    android:textIsSelectable="false"
    android:theme="@android:style/Theme"
    android:textColor="#000000"
    android:textColorHint="#000000" />


<EditText
    android:hint="Введите почтовый ящик"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:id="@+id/EmailNewPass"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="130dp"
    android:theme="@android:style/Theme"
    android:inputType="textEmailAddress"
    android:textColor="#000000"
    android:textColorHint="#000000" />

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Выслать новый пароль"
    android:id="@+id/getNewPass"
    android:layout_marginTop="20dp"
    android:height="60dp"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:background="@drawable/rect_text_edit_butt"
    android:textStyle="bold"
    android:layout_below="@+id/NewPassword"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Авторизоваться сейчас"
    android:id="@+id/goToLogin"
    android:layout_alignParentStart="true"
    android:height="60dp"
    android:background="#FE7575"
    android:textColor="#ffffff"
    android:textSize="15dp"
    android:layout_below="@+id/getNewPass"
    android:layout_alignParentLeft="true"
    android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewPassword"
        android:theme="@android:style/Theme"
        android:textColor="#000000"
        android:layout_below="@+id/textViewNPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ваш новый пароль:"
        android:id="@+id/textViewNPass"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:layout_below="@+id/EmailNewPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

