<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vitaliy_petuhov.quickjob.activity.ChangeUserActivity"
    tools:showIn="@layout/activity_change_user"
    android:id="@+id/change_user_info"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/changeUserImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/change_user"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Изменение имени пользователя:"
        android:id="@+id/changeNameTV"
        android:layout_below="@+id/changeUserImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/starName"
        android:layout_below="@+id/changeNameTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#000000"
        android:hint="Введите старое имя пользователя"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/starEmail"
        android:layout_below="@+id/starName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Введите почтовый ящик"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/newName"
        android:layout_below="@+id/starEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHint="#000000"
        android:hint="Введите новое имя пользователя"
        android:theme="@android:style/Theme"
        android:textColor="#000000" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изменить имя пользователя"
        android:id="@+id/changeNameButt"
        android:layout_below="@+id/newName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="@drawable/rect_text_add_butt"
        android:layout_marginTop="10dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/starName_1"
        android:layout_below="@+id/changeNameButt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:textColor="#000000"
        android:text="Введите имя пользователя"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/starEmail_1"
        android:layout_below="@+id/starName_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:text="Введите почтовый ящик"
        android:textStyle="normal"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/newPassword"
        android:layout_below="@+id/starEmail_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:theme="@android:style/Theme"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:inputType="textVisiblePassword"
        android:hint="Введите новый пароль" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изменить пароль"
        android:id="@+id/changePasswordButt"
        android:layout_below="@+id/newPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:background="@drawable/rect_text_add_butt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Изменение пароля:"
        android:id="@+id/changePassTV"
        android:layout_below="@+id/changeNameButt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:textColor="#000000"
        android:textSize="21dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Вернуться в Меню"
        android:textSize="15dp"
        android:id="@+id/BackToMenu_changeuser"
        android:background="#FFFFFF"
        android:textStyle="bold"/>

</RelativeLayout>
