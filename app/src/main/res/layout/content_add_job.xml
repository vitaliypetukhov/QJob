<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".activity.AddJobActivity"
        tools:showIn="@layout/activity_add_job"
        android:background="@drawable/rect_fon_about">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/add_job"
            android:layout_marginTop="-15dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobName"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:hint=" Введите должность"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            android:theme="@android:style/Theme" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/JobName"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-5dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Информация о местоположении"
            android:id="@+id/textView2"
            android:layout_below="@+id/JobType"
            android:layout_alignLeft="@+id/JobType"
            android:layout_alignStart="@+id/JobType"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="7dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobCountry"
            android:layout_below="@+id/JobType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:hint=" Введите страну"
            android:theme="@android:style/Theme"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobRegion"
            android:layout_below="@+id/JobCountry"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:hint=" Введите область(регион)"
            android:theme="@android:style/Theme"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobCity"
            android:layout_below="@+id/JobRegion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:hint=" Введите город"
            android:theme="@android:style/Theme"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobPayday"
            android:layout_below="@+id/JobCity"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint=" Введите зарплату"
            android:layout_marginTop="20dp"
            android:layout_marginRight="120dp"
            android:theme="@android:style/Theme"
            android:textSize="20dp"
            android:textColor="#000000"
            android:inputType="number" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/JobPaydayValue"
            android:layout_alignBottom="@+id/JobPayday"
            android:layout_marginLeft="236dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/JobCity"
            android:layout_marginTop="0dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobRequirements"
            android:layout_below="@+id/JobPaydayValue"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:hint=" Введите требования к работе"
            android:theme="@android:style/Theme"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobSchedule"
            android:hint=" Введите график работы"
            android:layout_below="@+id/JobRequirements"
            android:layout_alignRight="@+id/JobPaydayValue"
            android:layout_alignEnd="@+id/JobPaydayValue"
            android:theme="@android:style/Theme"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobContFName"
            android:layout_alignParentStart="true"
            android:hint=" Введите ваше имя"
            android:layout_below="@+id/JobSchedule"
            android:layout_alignRight="@+id/JobPaydayValue"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:theme="@android:style/Theme"
            android:textColor="#000000"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobContSName"
            android:layout_alignParentStart="true"
            android:hint=" Введите ваше отчество"
            android:layout_below="@+id/JobContFName"
            android:layout_alignRight="@+id/JobPaydayValue"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:theme="@android:style/Theme"
            android:textColor="#000000"
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobContPhone"
            android:layout_alignParentStart="true"
            android:hint=" Введите номер телефона"
            android:layout_below="@+id/JobContSName"
            android:layout_alignRight="@+id/JobPaydayValue"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:theme="@android:style/Theme"
            android:textColor="#000000"
            android:phoneNumber="false"
            android:inputType="phone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/JobContEmail"
            android:layout_alignParentStart="true"
            android:hint=" Введите почтовый ящик"
            android:layout_below="@+id/JobContPhone"
            android:layout_alignRight="@+id/JobPaydayValue"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:theme="@android:style/Theme"
            android:textColor="#000000"
            android:inputType="textEmailAddress" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Добавить Объявление  "
            android:id="@+id/AddJobButton"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/rect_text_add_butt"
            android:layout_below="@+id/JobContEmail"
            android:layout_marginTop="20dp"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:id="@+id/BackToMenu"
            android:layout_alignBottom="@+id/AddJobButton"
            android:layout_toRightOf="@+id/AddJobButton"
            android:layout_alignRight="@+id/JobContEmail"
            android:layout_alignEnd="@+id/JobContEmail"
            android:layout_below="@+id/JobContEmail"

            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/rect_text_add_butt"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Дополнительная информация о работе"
            android:id="@+id/dopInfoTV"
            android:layout_below="@+id/JobPayday"
            android:layout_alignLeft="@+id/JobType"
            android:layout_alignStart="@+id/JobType"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:textColor="#000000" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Контакты работодателя"
            android:id="@+id/textView3"
            android:layout_below="@+id/JobSchedule"
            android:layout_alignLeft="@+id/JobType"
            android:layout_alignStart="@+id/JobType"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:textStyle="bold"
            android:textColor="#000000" />


    </RelativeLayout>
</ScrollView>

