            android:name=".activity.EditJobActivity"
            android:label="@string/title_activity_edit_job"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FindJobActivity"
            android:label="@string/title_activity_find_job"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FavourActivity"
            android:label="@string/title_activity_favour"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AllAboutFavourJob"
            android:label="@string/title_activity_all_about_favour_job"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ChangeUserActivity"
            android:label="@string/title_activity_change_user"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ResultSearchActivity"
            android:label="@string/title_activity_result_search"
