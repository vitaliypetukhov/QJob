            android:name=".activity.NewPassword"
            android:label="@string/title_activity_new_password"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AboutJobActivity"
            android:label="@string/title_activity_about_job"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HistoryResult"
            android:label="@string/title_activity_history_result"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HistorySearch"
            android:label="@string/title_activity_history_search"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.HistoryAll"
            android:label="@string/title_activity_history_all"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
